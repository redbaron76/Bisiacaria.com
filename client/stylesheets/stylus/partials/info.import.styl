.md-info {

	h1 {
		absolute: top 0 left 0;
		width: 100%;
		font-size: 20px;
		color: $white;
		background-color: $gray-row-hl;
		padding: 20px;
		margin: 0;
		z-index: 1002;
	}

	&.error {
		h1 {
			background-color: $red;
		}
	}

	&.success {
		h1 {
			background-color: $green;
		}
	}

	.buttons {
		z-index: 1002;
		border: none;
		cursor: pointer;
		i {
			font-size: 40px;
		}

		&#info-close {
			absolute: top 10px right 10px;
		}
	}

	.wrapper-info {
		z-index: 1001;

		absolute: top 0 right 0 bottom 0 left 0;
		overflow-y: auto;
		width: 100%;
		color: $white;

		padding: 0 9%;

		.item-list {
			padding-top: 80px;

			li {
				display: table;
				padding: 10px 0;
				span {
					display: table-cell;
					width: 90%;
					padding-right: 2%;
					cursor: pointer;
				}
				i {
					text-align: center;
					display: table-cell;
					color: $white;
					width: 8%;
					cursor: pointer;

					&.fa-check {
						color: $green;
					}

					&.fa-times {
						color: $red;
					}

					&.fa-exclamation-triangle {
						color: $bisia;
					}
					& + span {
						padding-left: 2%;
					}
				}
				&:last-child {
					border: none;
				}
			}
		}

		// background-color: lime;
	}



}