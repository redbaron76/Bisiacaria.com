		}
	}
}

// Navbar toggle buttons

.navbar-btn {
	position: relative;
	background-color: rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	border: 0;
	color: $white;
	margin: 0;
	padding: 5px 12px;
	text-align: center;
	width: 40px;
	cursor: pointer;
	z-index: 2;

	&:after {
		content: attr(data-counter);
		absolute: top -5px;
		transform: translate3d(-50%, 0, 0);
		badge($red);
	}

	&[data-counter="0"] {
		&:after {
			display: none;
		}
	}

	&.left {
		&:after {
			right: -50%;
			transform: translate3d(-50%, 0, 0);
		}
	}

	&.right {
		&:after {
			left: -50%;
			transform: translate3d(50%, 0, 0);
			badge($bisiad);
		}
	}

	&.md-close {
		i {
			color: $red;
		}
	}
}

// Sidebar

.sidebar {
	fixed: top 0;
	// transition: transform .2s;
	background: $sidebar-bg;
	width: $sidebar-width;
	overflow: hidden;
	z-index: 1;

	visibility: hidden;

	ul li {
		margin-top: 2px;
		&:first-child {
			margin-top: 0;
		}
	}

	&.left {
		// fixed: left 0;
		absolute: left 0; // ie
		min-height: 100%;
		border: 0;
		border-right: 2px solid $gray-bg;
		// transform: translate3d(-50%, 0, 0);
	}

	&.right {
		// fixed: right 0;
		absolute: right 0; // ie
		min-height: 100%;
		border: 0;
		border-left: 2px solid $gray-bg;
		// transform: translate3d(50%, 0, 0);
	}
}

// Uploader

.uploader {
	overflow: hidden;
	position: relative;
	border-radius: 100px;
	margin: 0 auto;
	width: 200px;
	cursor: pointer;
	z-index: 3;

	input[type=file] {
		// background-color: lime;
		absolute: top 0 right 0 bottom 0 left 0;
		width: inherit;
		height: 100%;
		margin: 0;
		padding: 0;
		z-index: 4;
		opacity: 0;
	}

	.indicator {
		background-color: rgba(0, 0, 0, 0.6);
		absolute: right 0 bottom 0 left 0;
		z-index: 3;

		width: 100%;
		height: 0%;
		visibility: hidden;

		color: $white;
		font-size: 18px;
		font-family: $font-semibold;

		span {
			display: block;
			position: relative;
			top: 50%;
			transform: translateY(-50%);
		}

		&.loading {
			visibility: visible;
			span::after {
				content: '%';
				font-size: 12px;
			}
		}
	}
}

