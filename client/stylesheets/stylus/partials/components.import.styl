// Blinking

@keyframes blink {
	0% { opacity: 1.0; }
	50% { opacity: 0.0; }
	100% { opacity: 1.0; }
}

.blink {
	animation: blink 1s step-start 0s infinite;
}

.cite-inline {
	color: $blue !important;
	display: inline !important;
	white-space: pre-wrap;
	word-wrap: break-word;
	undecorate();
}

.video-wrapper {
	position: relative;
	padding-bottom: 56.25%; /* 16:9 */
	padding-top: 25px;
	margin: 15px 0;
	height: 0;
	iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}
}

.css-emoticon {
	// font-size: 14px !important;
	margin: 0 .4em;
}

// BUTTONS TOPPAD

.buttons-toppad {
	fixed: top $navbar-height;
	// absolute: top $navbar-height; // ie
	width: 100%;
	z-index: 5;

	& + .content {
		padding-top: 40px;
	}
}

.button-row {
	display: block;
	position: relative;
	width: 100%;
	border: 2px solid $gray-bar;
	border-radius: 5px;
	background-color: transparent;
	padding: 10px 0;
	margin-top: 15px;
	text-align: center;
	cursor: pointer;

	&:first-child {
		margin-top: 0;
	}

	i {
		margin-right: 10px;

		&.fa-times {
			color: $red;
		}
	}

	i, span {
		position: relative;
		z-index: 2;
	}

	& + .form-group {
		margin-top: 35px;
	}

	& + button[type=submit],
	& + button[type=button] {
		margin-top: 35px !important;
	}

	input[type=file] {
		absolute: top 0 right 0 bottom 0 left 0;
		width: inherit;
		height: 100%;
		margin: 0;
		padding: 0;
		z-index: 3;
		opacity: 0;
	}

	.indicator {
		background-color: darken($white-text, 5%);
		absolute: right 0 bottom 0 left 0;
		z-index: 1;

		height: 100%;
		width: 0%;
		visibility: hidden;

		// color: $white;
		// font-size: 18px;
		// font-family: $font-semibold;

		span {
			display: block;
			position: relative;
			top: 50%;
			transform: translateY(-50%);
		}

		&.loading {
			visibility: visible;
			span::after {
				content: '%';
				font-size: 12px;
			}
		}
	}

	& + .geo-location {
		margin-top: 20px !important;
	}
}

// FACEBOOK

.fb-button {
	margin: 0 auto;
	display: block;
	text-align: center;
	border-radius: 4px;
	border: none;
	color: $white;
	padding: 5px 10px;

	&#facebook-connect {
		background-color: $blue;
	}

	&#facebook-logout {
		background-color: $red;
	}

	i {
		padding-right: 5px;
	}
}

// HELPBARS

#helpbars {

	.titlebar {
		display: block;
		height: 40px;
		padding: 0;
		fixed: top 0;
		// absolute: top 0;
		transform: translate3d(0, -100%, 0);
		transition: transform .5s, opacity .5s;
		opacity: 0;
		z-index: 5;

		h2 {
			text-align: left;
			font-size: 16px;
			margin: 0;
			padding: 15px 30px;
			malefemale();

			background-color: $gray-row;
			color: $white-text;
		}
	}

	.gotopmore {

		bottom-bar();

		button {
			&.load-more {
				width: 80%;
				background-color: $gray-row;
				i {
					margin-right: 5px;
				}

				& + button {
					width: 20%;
				}
			}
			&.go-top {
				background-color: $gray-row-hl;
			}
		}

	}

	&.top-show {
		.titlebar {
			opacity: .9;
			transform: translate3d(0, $navbar-height, 0);
		}
	}

	&.bottom-show {
		.posts {
			padding-bottom: 40px;
		}

		.gotopmore {
			opacity: .9;
			transform: translate3d(0, 0, 0);
		}
	}
