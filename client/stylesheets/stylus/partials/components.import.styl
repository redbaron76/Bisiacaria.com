// Images

.img-preview {
	width: 100%
	height: auto;
	padding: 1%;
	margin: 15px 0 0 0;
	border: 1px solid $white-border;
	border-radius: 4px;

	& + p {
		margin-top: 10px;
	}

	& img {
		width: inherit;
		height: auto;
		cursor: pointer;
	}
}

.thumby {
	position: relative;
	width: inherit;
	height: auto;
	margin: 20px 0 25px 0;

	img.ri {
		width: 100%;
		height: auto;
		border-radius: 3px;
		box-shadow: 0 3px 6px rgba(0,0,0,0.9);
	}

	& + p {
		padding-top: 0 !important;
		padding-bottom: 20px !important;
	}
}

.thumbimg {
	position: relative;
	width: 100%;
	height: 160px;
	overflow: hidden;
	border: none;
	border-radius: 3px;
	margin: 0 0 15px 0;
	padding: 0;
	box-shadow: 0 3px 6px rgba(0,0,0,0.9);

	&.preview {
		box-shadow: none;
		border: 2px solid $gray-bar;
		border-radius: 5px;
		padding: 5px;

		img {
			width: 95%;
		}

		& + .button-row {
			margin-top: 30px;
		}
	}

	img {
		position: absolute;
		left: 50%;
		top: 50%;
		width: 101%;
		height: auto;
		transform: translate(-50.1%,-50%);
	}

	/*& + p {
		padding-top: 20px !important;
	}*/

