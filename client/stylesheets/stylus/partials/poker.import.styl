#poker {

	ul {
		margin: 0;
		padding: 0;
		list-style-type: none;
		display: table;
		width: 100%;

		li {
			display: table-cell;
		}
	}

	#deck {
		background-color: $white;
		border-top: 1px solid $white-border;
		border-bottom: 1px solid $white-border;
		padding: 15px 10px;

		ul.stats {
			padding: 0 0 25px 0;

			li {
				font-size: 10px;
				font-family: $font-semibold;
				color: $gray-row-pin;
				width: 25%;

				&:nth-child(3),
				&:nth-child(4) {
					text-align: right;
				}

				span {
					color: $red;
				}
				&:last-of-type {
					text-align: right;
				}
			}
		}

		ul.cards {
			li {
				width: 20%;
				text-align: center;

				img {
					width: 95%;
					height: auto;
				}
			}

			& + h5 {
				padding: 15px 5px 0 0;
				font-size: 16px;
				font-family: $font-semibold;
				text-align: center;
			}
		}
	}

	#bet {
		padding: 5px 10px;

		h6 {
			font-family: $font-semibold;
			display: inline-block;
		}

		ul {
			margin-top: -20px;

			li {
				width: 18%;
				text-align: left;
				vertical-align: bottom;

				&:last-of-type {
					width: 40%;
					padding-left: 10px;
					font-family: $font-semibold;
					text-align: right;
				}

				button {
					width: 95%;
					border: none;
					border-radius: 4px;
					background-color: $gray-row-pin;
					font-family: $font-semibold;
					color: $white;
					padding-top: 5px;
					padding-bottom: 5px;

					&.selected {
						background-color: $bisiad;
						color: $gray-row;
					}

					&#play {
						width: 100%;
						height: 60px;
						background-color: $green;
						font-size: 20px;
					}
				}
			}
		}
	}
}