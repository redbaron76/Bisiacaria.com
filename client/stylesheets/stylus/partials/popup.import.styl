.md-popup {
	fixed: top 30% left 50%;
	transform: translateX(-50%) translateY(-50%);
	width: 85%;
	max-width: 630px;
	min-width: 300px;
	height: auto;
	min-height: 200px;
	z-index: 1001;
	visibility: hidden;
	backface-visibility: hidden;

	&.md-show {
		visibility: visible;
	}

	.animation {
		relative: top 0 bottom 0;
		width: 100%;
		height: auto;
	}
	.close {
		font-family: $font-bootstrap;
		absolute: top 10px right 15px;
	}

	.md-message {
		relative: top 0 bottom 0 left 0 right 0;
		width: 100%;
		height: 100%;
		border-radius: 3px;
		margin: 0 auto;
		padding: 20px;
		background-color: $white;
		border-radius: 3px;

		p {
			margin-bottom: 5px;
			padding-bottom: 5px;
			border-bottom: 1px solid $white-border;
			malefemale();
		}
		span.username {
			font-family: $font-semibold;
		}
		form {
			width: 100%;
			height: 100%;
			margin: 0;

			textarea {
				width: 100%;
				min-height: 80px !important;
				max-height: 200px;
				border: 0;
				border-radius: 0;
				padding: 0;
				margin: 10px 0;
				background-color: $white;
				font-size: 13px;
				resize: none;
				overflow-x: hidden;

				& + button[type=submit] {
					margin-top: 0 !important;
					background-color: $gray-row;
					color: $white;
				}
			}
		}
	}
}