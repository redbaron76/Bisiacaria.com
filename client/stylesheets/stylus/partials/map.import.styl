#map-wrapper {
	absolute: top 0 right 0 bottom 0 left 0;
	width: 100%;
	height: 100%;
	z-index: 100;

	background-color: $white;

	span {
		z-index: 1001;
		border: none;
		cursor: pointer;
		i {
			font-size: 40px;
		}
	}

	#map-set {
		absolute: top 10px right 60px;
		i:nth-of-type(2) {
			color: $green;
		}
	}

	#map-close {
		absolute: top 10px right 15px;
	}

	#map-center {
		absolute: bottom 60px right 15px;
		i:nth-of-type(2) {
			color: darken($blue, 20%);
		}
	}
}