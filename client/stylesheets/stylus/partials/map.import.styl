#map-wrapper {
	absolute: top 0 right 0 bottom 0 left 0;
	width: 100%;
	height: 100%;
	z-index: 1001;

	background-color: $white-bg;

	span {
		z-index: 1001;
		border: none;
		cursor: pointer;
		i {
			font-size: 40px;
		}
	}

	#map-set {
		absolute: top 10px right 60px;
		i:nth-of-type(2) {
			color: $green;
		}
	}

	#map-close {
		absolute: top 10px right 15px;
	}

	#map-center {
		absolute: bottom 60px right 15px;
		i:nth-of-type(2) {
			color: darken($blue, 20%);
		}
	}

	.leaflet-popup-content {
		min-width: 100px;
		cursor: pointer;
		big {
			display: block;
			font-family: $font-semibold;
			margin-bottom: 5px;
			font-size: 14px;
			&.male {
				color: $blue;
			}
			&.female {
				color: $pink;
			}
		}
		span {
			display: block;
			font-family: $font-semibold;
			margin-bottom: 5px;
		}
		small {
			display: block;
			margin-top: 5px;
			text-align: right;
			color: $white-map;
		}
		.event > * {
			text-align: center !important;
		}
		.write-message {
			position: relative;
			&::before {
				fa('\f0e0');
				absolute: left 0 bottom -9px;
				color: $white-map;
				font-size: 20px;
			}
		}
	}

	// min-width: 992px
	@media (min-width: $screen-md-min) {
		left: $sidebar-width;
		width: auto;
	}

	// min-width: 1280px
	@media (min-width: $screen-lg-min) {
		right: $sidebar-width;
	}

}