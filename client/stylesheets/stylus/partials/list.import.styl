.list {
	.bottom {
		bottom-bar();

		button {
			&.load-more {
				width: 80%;
				background-color: $gray-row;
				i {
					margin-right: 5px;
				}

				& + button {
					width: 20%;
				}
			}
			&.go-top {
				background-color: $gray-row-hl;
			}
		}
	}

	&.bottom-show {
		.item-list {
			padding-bottom: 40px;
		}

		.bottom {
			transform: translate3d(0, 0, 0);
		}
	}
}