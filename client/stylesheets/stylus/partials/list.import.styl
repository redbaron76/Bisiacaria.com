.list {
	
	.item-list {
		ul-list();

		li {
			li-list();
			status();
			malefemale();
			background-color: transparent;
			border-bottom: 1px solid $white-border;
			padding: 7px 0;
			width: 100%;

			.li-wrapper {
				a-wrapper();
				display: table;
				width: 100%;
				transition: transform .2s;
			}

			.action {
				display: table
				absolute: top 0 right -116px bottom 0;
				transition: transform .2s;
				opacity: .9;
				z-index: 2;

				a, button {
					display: table-cell;
					vertical-align: middle;
					border: none;
					color: $white;
					text-align: center;
					line-height: 45px;
					width: 50px;
					margin-left: 1px;
					padding: 0;

					i.fa {
						font-size: 22px;
						vertical-align: middle;
					}

					&.reply {
						background-color: $blue;
					}
					&.trash {
						background-color: $red;
					}
				}
			}

			&.tools-open {
				.li-wrapper {
					transform: translate3d(-60px, 0, 0);
				}

				.action {
					transform: translate3d(-41px, 0, 0);
				}
			}

			.right-aligned {
				display: table-cell;
				text-align: right;
				vertical-align: middle;
				font-size: 22px;
				color: $gray-bar;
			}

			.checkbox {
				display: table-cell;
				text-align: right;
				vertical-align: middle;
				width: 35px;

				.checkround {
					checkround();
					float: right;
				}

				a.button {
					undecorate();
					.fa-circle { color: $blue; }
				}

				a.btn-round {
					button-round(35px);
					background-color: $blue;
					i {
						font-size: 18px;
					}
				}
			}

			.avatar {
				avatar(45px, 2px);
				width: 45px;
			}

			.username {
				username(14px);
				width: calc(80% - 45px);

				small {
					color: $gray-row-pin;
				}

				span {
					font-size: 10px;
				}
			}
		}
	}

	.bottom {
		bottom-bar();

		button {
			&.load-more {
				width: 80%;
				background-color: $gray-row;
				i {
					margin-right: 5px;
				}

				& + button {
					width: 20%;
				}
			}
			&.go-top {
				background-color: $gray-row-hl;
			}
		}
	}

	&.bottom-show {
		.item-list {
			padding-bottom: 40px;
		}

		.bottom {
			transform: translate3d(0, 0, 0);
		}
	}
}