.list {

	.list-wrapper {
		overflow-x: hidden;
		overflow-y: auto;
	}

	.item-list {
		ul-list();

		li {
			li-list();
			status();
			malefemale();
			background-color: transparent;
			border-bottom: 1px solid $white-border;
			padding: 7px 0;
			width: 100%;

			.li-wrapper {
				a-wrapper();
				position: relative;
				display: table;
				width: 100%;
				transition: transform .2s;
				label {
					font-weight: 500;
					color: $black-text;
				}

				& + small {
					font-size: 11px;
					color: $gray-row-pin;
				}
			}

			.action {
				display: table
				absolute: top 0 right -116px;
				transition: transform .2s;
				height: 50px;
				z-index: 2;

				a, button {
					display: table-cell;
					vertical-align: middle;
					border: none;
					color: $white;
					text-align: center;
					width: 50px;
					height: inherit;
					margin-left: 1px;
					padding: 0;

					i.fa {
						font-size: 22px;
						vertical-align: middle;
					}

					&.reply {
						background-color: $blue;
					}
					&.trash {
						background-color: $red;
					}
				}
			}

			&.tools-open {
				.li-wrapper {
					transform: translate3d(-60px, 0, 0);
				}

				.action {
					transform: translate3d(-41px, 0, 0);
				}
			}

			.right-aligned {
				display: table-cell;
				text-align: right;
				vertical-align: middle;
				font-size: 22px;
				color: $gray-bar;
			}

			.checkbox {
				display: table-cell;
				text-align: right;
				vertical-align: middle;
				width: 35px;

				.checkround {
					checkround();
					float: right;
				}

				a.button {
					undecorate();
					.fa-circle { color: $blue; }
				}

				a.btn-round {
					button-round(35px);
					background-color: $blue;
					i {
						font-size: 18px;
					}
				}
			}

			.avatar-wrapper {
				width: 45px;
				display: table-cell;
				vertical-align: top;

				.avatar {
					avatar(45px, 2px);
				}
			}

			.username {
				position: relative;
				username(14px);
				width: calc(80% - 45px);

				small {
					color: $gray-row-pin;
				}

				span {
					font-size: 10px;
				}

				.message {
					width: 80%;
				}

				.count {
					badge($red);
					absolute: left -20px bottom 0;
					z-index: 5;
				}

				&.text {
					p {
						margin: 0;
						font-family: $font-book;
						font-size: 13px;
						color: $gray-row-pin;

						strong, cite {
							font-family: $font-semibold;
							font-weight: normal;
							color: lighten($gray-row-hl, 25%);
						}

					}

					span {
						absolute: top 0 right 0;
					}
				}
			}

			.description {
				position: relative;
				width: 100%;

				big {
					username(14px);
				}

				small {
					absolute: top 0 right 0;
					font-size: 10px;
				}
			}
		}

		li.message {
			border: none;

			.avatar-wrapper {
				width: 50px;
				display: block;
				font-size: .8em;
				padding-top: 10px;
				.avatar {
					avatar(35px, 2px);
				}
				&.online::after {
					top: 10px;
				}
			}

			p {
				position: relative;
				display: table-cell;
				width: 100%;
				padding: 10px;
				border-radius: 5px;
				background-color: $white-border;
				vertical-align: top;
				font-size: 12px;

				a.username {
					undecorate();
					display: block;
					padding-left: 0;
					padding-bottom: 5px;
					width: 100%;
					span.time {
						absolute: top 0 right 0;
					}
				}

				.caret-chat {
					width: 0;
					height: 0;
					border-top: 8px solid transparent;
					border-bottom: 8px solid transparent;

					&.left {
						border-right: 8px solid $white-border;
						absolute: top 19px left -8px;
					}

					&.right {
						border-left: 8px solid $white;
						absolute: top 19px right -8px;
					}
				}
			}

			&.me {
				.avatar-wrapper {
					text-align: right;
					div {
						margin-left: auto;
						margin-right: 0;
					}
				}

				a.username {
					text-align: right;
					span.time {
						left: 0;
						right: auto;
					}
				}
				p {
					background-color: $white;
				}
			}
		}
	}

	.chat {
		.item-list {
			padding-bottom: 100px !important;
		}
	}

	.reply-form {
		-webkit-backface-visibility: hidden;
		-webkit-transform: translateZ(0);
		transition: transform .5s;
		fixed: bottom 0;
		width: 100%;
		z-index: 5;

		& > div {
			padding: 0;
		}

		form {
			width: 100%;
			margin: 0;
			padding: 10px 0 10px 10px;
			background-color: $gray-bar;
			display: table;

			textarea {
				border: 0;
				border-radius: 5px;
				padding: 5px 10px;
				margin: 0;
				font-size: 12px;
				color: $gray-row-hl;
				background-color: $white;
				width: 85%;
				height: 50px;
				min-height: 50px;
				resize: none;
				display: table-cell;
			}

			button {
				border: none;
				width: 15%;
				line-height: 22px;
				margin: 0 0 15px 0;
				background-color: transparent;
				color: $blue;
				font-family: $font-semibold;
				display: table-cell;
				text-align: center;
				vertical-align: bottom;
			}

			label {
				text-align: right;
				display: inline-block;
				font-size: 10px;
				color: $white;
				width: 85%;
				input {
					margin-left: 5px;
				}
			}
		}
	}

	.bottom {
		bottom-bar();

		button {
			&.load-more {
				width: 80%;
				background-color: $gray-row;
				i {
					margin-right: 5px;
				}

				& + button {
					width: 20%;
				}
			}
			&.go-top {
				background-color: $gray-row-hl;
			}
		}
	}

	&.bottom-show {
		.item-list {
			padding-bottom: 40px;
		}
		.chat .item-list {
			padding-bottom: 115px;
		}

		.reply-form {
			transform: translate3d(0, -40px, 0);
		}
		.bottom {
			transform: translate3d(0, 0, 0);
		}
	}
}