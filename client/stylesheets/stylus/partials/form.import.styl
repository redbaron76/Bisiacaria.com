.form-row {
	display: block;
	font-size: 18px;
	padding: 0;
	margin: 25px auto 0 auto;
	width: 85%;
	min-width: 250px;

	&:last-child {
		margin-bottom: 25px;
	}

	.divider + .form-group {
		margin: 20px 0 25px 0;
	}

	.form-group {
		position: relative;
		display: table;
		width: 100%;

		// background-color: lime;

		border-bottom: 2px solid $gray-row;
		padding-bottom: 5px;
		margin-bottom: 25px;

		& > i,
		& > span {
			// display: inline-block;
			display: table-cell;
			width: 10%;
			margin: 0;
			text-align: right;
			vertical-align: top;

			&.check {
				height: 26px;
				line-height: 26px;

				&.valid::before {
					fa('\f00c');
					color: $green;
				}

				&.fail::before {
					fa('\f00d');
					color: $red;
				}
			}

			&.counter {
				font-size: 12px;
				height: 26px;

				& + .check {
					display: none;
				}
			}

			&.msg {
				absolute: left 0 top 33px;
				font-family: $font-bootstrap;
				font-size: .6em;

				text-align: left;
				display: block;
				width: 100%;
				padding: 2px 5px;

				&.error {
					background-color: $red;
					color: $white;
				}

				&.success {
					background-color: $green;
					color: $white;
				}
			}
		}

		& > i {
			color: $gray-row;
			padding-top: 3px;
			text-align: center;
		}

		&.text-area {
			& > i {
				padding-top: 1px;
			}
		}

		&.check-box {
			& > i {
				padding-top: 5px;
			}
		}

		& span.text-count {
			display: inline-block;
			padding-top: 5px;
		}

		&.descr {
			border: 0;
			textarea {
				font-size: 14px;
				max-height: 200px;
				overflow-x: hidden;
			}
		}

		.show-geotags {
			display: none;
		}

		&.no-bottom {
			border-bottom: none;
		}
	}

	button#newsletter-signup {
		button(70px);
		padding: 2px;
		font-size: 14px;
		background-color: $bisiad;
	}

	button[type=submit] {
		button(100%);
		margin-top: 10px;

		&.yellow {
			background-color: $bisiad;
		}

		&.gray {
			background-color: $gray-row-pin;
			color: $white;
		}

		&.blue {
			background-color: $blue;
			color: $white;
		}

		&.red {
			background-color: $red;
			color: $white;
		}

		&.loading::before {
			fa('\f021');
			font-size: 16px;
			margin-right: 10px;
			display: inline-block;
			vertical-align: top;
			animation(fa-spin 2s infinite linear);
		}
	}

	input[type=text],
	input[type=password],
	input[type=email],
	textarea {
		border: none;
		background-color: transparent;
		display: table-cell;
		margin: 0;
		padding: 0;
		font-size: 16px;
		width: 100%;
		resize: none;
	}

	textarea {
		height: 22px;
		display: block;

		& + .counter > span {
			padding-top: 3px !important;
		}

		&.autosize {
			// height: 22px !important;
		}

		.counter + .check {
			display: none;
		}
	}

	select {
		font-size: 14px;
		margin: 0;
		padding: 10px;
		& + span {
			width: 5% !important;
		}
	}

	label {
		font-size: 14px;
		color: $gray-row-pin;

		& > input {	margin-right: 5px; }
	}

	.birthdate {
		display: table-cell;
		width: 80%;

		span.spacer {
			width: 5% !important;
			margin: 0 !important;
		}

		input[type=text] {
			width: 25%;
			text-align: center;
		}
	}

	.check-box {

		.checkround {
			display: inline-block;
			checkround();

			& + label {
				display: none;
				vertical-align: text-bottom;
				margin-left: 10px;

				color: $gray-row-pin;
				font-family: $font-light;
				font-size: 16px;

				& + span.error {
					absolute: top 39px;
				}

				&.show-label {
					display: inline-block;
				}
			}
		}
	}

	p {
		display: block;
		font-size: 13px;
		margin: 20px 0;

		a {
			color: $blue;
			text-decoration: none;
		}
	}
}

#usersearch {

	.divider {
		divider(10%);
	}

	.status-radio {
		text-align: right;
	}

	.checkround {

		&.male {
			checkround($blue, 26px, 3px , 4px);
		}

		&.female {
			checkround($pink, 26px, 3px , 4px);
		}

		&.busy {
			checkround($red, 26px, 3px , 4px);
		}

		&.none {
			checkround($bisia, 26px, 3px , 4px);
		}

		&.free {
			checkround($green, 26px, 3px , 4px);
		}
	}

}

.slider-wrapper {
	display: table;
	.slider, span {
		display: table-cell;
	}
	span {
		width: 25px;
		color: $gray-row-pin;
		font-size: 16px;

		&:nth-of-type(1) {
			padding-left: 10px;
			padding-right: 15px;
		}
		&:nth-of-type(2) {
			padding-left: 15px;
		}
	}
	.slider {
		width: 100%;
		margin: 0 10px;
		.slider-handle {
			background-color: $gray-row-pin;
			background-image: none;
		}
		.slider-track {
			background-image: none;
			background-color: $white-border;
			.slider-selection {
				background: none;
				box-shadow: none;
			}
		}
	}
}

#form-user-evaluate {
	.slider-wrapper {
		width: 100%;

		.slider {
			width: 70%;
		}
		span {
			width: 10%;
			padding: 0 0 0 2px;
			font-size: 14px;

			&:first-of-type {
				width: 20%;
				text-align: right;
				padding-left: 2px;
				&::after {
					padding-left: 2px;
					content: '/';
				}
			}
		}
		& + label {
			font-size: 10px;
			display: block;
			text-align: right;
			padding-top: 5px;
			input {
				margin-left: 3px;
			}
		}
	}
}