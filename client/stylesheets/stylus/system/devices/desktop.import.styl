/* min 768px */
min768() {

	.bottom-show {
		// .item-list,
		.posts {
			padding-bottom: 40px !important; // 80
		}
	}

	.status-radio {
		text-align: left !important;
	}

	.chatpage {
		.chat {
			.item-list {
				padding-top: 50px;
				padding-bottom: 100px;
			}
		}
	}

	.check-box {
		.checkround {
			& + label {
				display: inline-block;
			}
		}
	}

	&.closing-right {
		.sidebar.left {
			z-index: 1 !important;
		}
		& ~ .device-switcher {
			z-index: 1 !important;
		}
	}

	.body-wrapper.unlogged {
		.content {
			background-color: $gray-bg;
		}

		.logo {
			.counter {
				font-size: 200% !important;
				width: 100px !important;
			}
		}

		.form {
			padding: 0 25%;
		}

		& + .md-modal .form {
			padding: 0 20%;
		}
	}

	.body-wrapper.logged {
		absolute: top 0 left $sidebar-width;
		width: calc(100% - 260px);

		.bar.bar-nav {
			position: absolute;
			width: 100%;
		}

		& + .sidebar {
			// top: $navbar-height !important;
			z-index: 5;
		}

		& + .sidebar.left {
			visibility: visible;
			display: block !important;
		}

		& + .md-modal .form {
			padding: 0 15%;
		}
	}

	.navbar-btn.left {
		display: none;
		&.md-close {
			display: inline;
		}
	}

	.buttons-toppad {
		position: absolute;
		width: 100%;
	}

	.md-overlay,
	.reply-form {
		position: absolute;
	}

	.md-modal + .sidebar {
		//top: $navbar-height !important;
		visibility: visible;
	}

	.md-info {
		.wrapper-info {
			padding: 0 25%;
		}
	}

	.md-bubble {
		position: absolute;
		left: 5px;
		bottom: 5px;
		top: auto;
		width: $sidebar-width - 10px;
		min-width: $sidebar-width - 10px;
		transform: none;

		& + .md-overlay {
			visibility: hidden;
			opacity: 0;
		}
	}

	.device-switcher {
		position: relative !important;
		// display: block !important;
		display: table !important; // ie
		padding: 20px 0;
		text-align: center;
		margin: 0 auto;
		& > button {
			background: none;
			color: $gray-row-hl;
		}
	}

	.titlebar,
	.gotopmore {
		width: calc(100% - 260px);
		// absolute: left 0;
		// padding-left: $sidebar-width !important;
	}

}

min992() {

	.body-wrapper.unlogged {
		.logo {
			.counter {
				&.signed {
					left: 15% !important;
				}
				&.online {
					right: 15% !important;
				}
			}
		}
		.cookie {
			p {
				text-align: center;
			}
		}
	}

}

min1280() {

	.body-wrapper.unlogged {

		.form {
			padding: 0 30%;
		}

		& + .md-modal .form {
			padding: 0 25%;
		}
	}

	.body-wrapper.logged {
		absolute: top 0 left $sidebar-width right $sidebar-width;
		width: calc(100% - 520px);

		& ~ .sidebar.right {
			visibility: visible;
			display: block !important;
		}

		& + .md-modal .form {
			padding: 0 20%;
			&.postevent {
				padding: 0 5%;
			}
		}
	}

	.bar-nav {
		.navbar-btn.right {
			display: none;
		}

		&.bar-modal {
			.navbar-btn.right {
				display: inline;
			}
		}
	}

	.titlebar,
	.gotopmore {
		position: absolute !important;
		left: 0;
		right: 0 ;
		width: 100%;
	}

}

more1280() {

	position: relative;
	width: $screen-lg-min;
	margin: 0 auto;

	&.unlogged {
		width: 100%;
	}

}