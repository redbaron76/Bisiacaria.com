	}
}

/* Medium devices (desktops, 992px and up) */
tablet-h() {

	.helpbar .title,
	.helpbar .bottom {
		left: 0;
		padding-left: $sidebar-width !important;
	}

	.sidebar.left {
		transition: transform .25s;
		visibility: visible;
		z-index: 3;
	}

	.navbar-btn.toggle-menu {
		display: none;
	}

	&.wrapper {
		&.closing-right {
			.sidebar.left {	display: block !important; }
		}
		&.sidebar-open-right {
			.sidebar.left {
				display: block !important;
				transform: translate3d($sidebar-width * -1, 0, 0);
				transition: transform .25s;
			}
		}
	}

	.body-wrapper {
		& > .bar {
			padding-left: $sidebar-width + 15px;

			& + .content {
				padding-left: $sidebar-width + 15px;
			}
		}
		.row.buttons-toppad,
		.row.reply-form {
			width: 875px - $sidebar-width;
		}
	}

	#login,
	#register {
		.signed { left: 25% !important;	}
		.online { right: 25% !important; }

		.form {
			width: 66%;
			margin: 0 auto;
			float: none;
		}
	}
}
