	}
	font-family: $font-semibold;
	vertical-align: middle;

	& > span {
		color: $gray-row-pin;
		display: block;
		font-family: $font-book;
		font-size: font-size;
		&::before {
			fa('\f041');
			margin-right: .5em;
		}

		&.time {
			&::before {
