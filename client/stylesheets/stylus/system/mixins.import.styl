switch() {

	.switch {
		overflow: hidden;
		position: relative;
		display: block;
		width: 80px;
		height: 30px;
		padding: 0;
		margin: 0 auto;
		border-radius: 18px;
		cursor: pointer;
	}

	.switch-input {
		position: absolute;
		top: 0;
		left: 0;
		opacity: 0;
	}

	.switch-label {
		position: relative;
		display: block;
		height: inherit;
		font-size: 10px;
		text-transform: uppercase;
		background: $red;
		border-radius: inherit;
		transition: 0.15s ease-out;
		transition-property: opacity background;
	}
	.switch-label:before, .switch-label:after {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
	}
	.switch-label:before {
		content: attr(data-off);
		right: 20%;
		color: $white;
		font-size: 20px;
	}
	.switch-label:after {
		content: attr(data-on);
		left: 20%;
		color: white;
		opacity: 0;
		font-size: 20px;
	}
	.switch-input:checked ~ .switch-label:before {
		opacity: 0;
	}
	.switch-input:checked ~ .switch-label:after {
		opacity: 1;
	}

	.switch-handle {
		position: absolute;
		top: 3px;
		left: 3px;
		width: 24px;
		height: 24px;
		background: $white;
		border-radius: 12px;
		transition: left 0.15s ease-out;
	}

	.switch-input:checked ~ .switch-handle {
		left: 53px;
	}

	.switch-green > .switch-input:checked ~ .switch-label {
		background: $green;
	}



}

