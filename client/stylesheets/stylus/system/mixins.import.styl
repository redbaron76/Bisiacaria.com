a-wrapper() {
	& > a {
		display: table;
		width: inherit;
		undecorate();
	}
}

avatar(dim = 40px, borderw = 2px, x = 0, y = 0) {
	position: relative;
	width: dim;
	height: dim;
	border-radius: (dim/2)px;
	border-width: borderw;
	border-style: solid;
	overflow: hidden;
	z-index: 2;

	&.default::before {
		absolute: top -12% right 0 bottom 0 left 0;
		width: 100%;
		height: 100%;
		font-size: dim;
		text-align: center;
		background-color: $gray-row;
		z-index: 1;

		fa('\f007');
	}
}

badge(bcolor = $gray-row-pin) {
	background-color: bcolor;
	border-radius: 10px;
	color: $white-text;
	font-family: $font-semibold;
	font-size: 10px;
	text-align: center;
	padding: 0 5px;
	line-height: 20px;
	min-width: 20px;
	min-height: 20px;
}

bottom-bar() {
	display: table;
	width: 100%;
	height: 40px;
	padding: 0;
	z-index: 10;
	fixed: bottom 0;
	opacity: .9;
	transform: translate3d(0, 100%, 0);
	transition: transform .5s;

	button {
		border: 0;
		width: 100%;
		padding: 10px 0;
		text-align: center;
		color: $white;
		display: table-cell;
	}
}

button(width = 100%) {
	width: width;
	padding: 10px 0;
	border: none;
}

button-round(width = 40px) {
	display: inline-block;
    width: width;
    height: width;
    line-height: width;
    border-radius: 50%;
    color: $white;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    background: $gray-row-pin;
    undecorate();
}

checkround(color = $bisia, diam = 30px, border = 4px, gap = 2px) {

	width:  diam// 28px;
	height: diam // 28px;
	margin: 0 auto;

	position: relative;
	border-radius: 50px;

	background-color: $gray-row-pin;

	ratio = diam - (border * 2)px

	label {
		cursor: pointer;
		position: absolute;
		width: ratio;
		height: ratio;

		border-radius: 50px;
		left: border; // 4px
		top: border; // 4px

		background-color: $white-border;

		&::after {
			opacity: 0;
			content: '';
			position: absolute;
			width: ratio - gap;
			height: ratio - gap;
			background-color: color;

			border-radius: 50px;
			top: (gap / 2)px;
			left: (gap / 2)px;
		}

		&:hover::after {
			opacity: .2;
		}

	}

	input[type=checkbox],
	input[type=radio] {
		display: none;

		&:checked + label::after {
			opacity: 1;
		}
	}
}

counter() {
	background-color: $gray-row-hl;
	border-radius: 5px;
	text-align: center;
	font-family: $font-semibold;
	font-size: 12px;
	margin-right: 10px;
	padding: 3px 7px;
	color: $white;
	vertical-align: middle;

	span {
		color: $bisia;
		display: block;
		font-size: 6px;
		text-transform: uppercase;
	}
}

divider(extra = 0, margin = 40px, font-size = 12px) {
	position: relative;
	margin: margin 0;
	text-align: center;
	font-size: font-size;
	color: $gray-row-hl;
	font-family: $font-semibold;
	text-transform: uppercase;
	word-spacing: 2px;

	&::before {
		content: "";
		display: block;
		border-top: 1px solid $gray-row;
		width: 100% + extra;
		height: 1px;
		absolute: top 48%;
		z-index: 1;
		left: (extra * -.5);
	}

	& > span {
		padding: 0 15px;
		position: relative;
		z-index: 2;
	}

	&.white-bg > span {
		background-color: $white-bg;
	}
}

ellipsis() {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}

fa(content) {
	font-family: 'FontAwesome';
	content: content;
}

image-avatar(dim = 40px, borderw = 2px) {
	display: inline-block;
	width: dim;
	height: dim;
	border-radius: (dim/2)px;
	border-width: borderw;
	border-style: solid;
}

input-search() {
